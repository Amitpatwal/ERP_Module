@page
@model ItemListModel
@{

    ViewData["Title"] = "Home page";
}

<body class="hold-transition sidebar-mini" >
    <div class="container-fluid" >
        <div >

            <nav class="navbar navbar-expand-sm  navbar-dark" style="background-color: #FBFBFD;">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" style="color:black ;font-size:15px" id="headerlabel"></a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                   
                   
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <li class="nav-item" id="openingstockbutton" style="display:none">
                        <a data-toggle="tooltip" title="Switch Company" onclick="OpeningStock()" class="btn btn-info btn-sm" style="color:white">
                            <i class="fa fa-file-text">
                            </i>
                            Opening Stock Report
                        </a>
                    </li>

                    <li class="nav-item" id="itemlistbuttton" style="display:none">
                        <a onclick="LoadDatatable()" class="btn btn-info btn-sm" style="color:white">
                            <i class="fa fa-file-text">
                            </i>
                            Item List
                        </a>

                    </li>

                    &nbsp;&nbsp;&nbsp;&nbsp;

                    <li class="nav-item" id="validation" style="display:none">
                        <a id="selectdeletefolder" class="btn btn-info btn-sm" style="color:white" href="../ItemMaster">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Add New Item
                        </a>
                        <span id="savePR" hidden>Save</span>
                    </li>
                </ul>
            </nav>

            <section class="content">
                <div class="container-fluid" id="itemlistdiv" style="display:none;">
                    <div class="row">
                        <div class="col-12">
                            <div class="card"  >
                                <!-- /.card-header -->
                                <div class="card-body">

                                    <table id="listTable" class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Sr<br /> No.</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Product Name</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Size</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Class</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Category</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Unit</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;"> Alt Unit</th>
                                                <th style="font-family: 'sans-serif';  font-weight: normal;">HSN Code</th>
                                                <th style="font-family: 'sans-serif';  font-weight: normal;">Conversion</th>
                                                <th id="oper"></th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </section>

            <section class="content">
                <div class="container-fluid" id="openingstockdiv" style="display:none">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <!-- /.card-header -->
                                <div class="card-body">

                                    <table id="openingTable" class="table table-bordered table-hover display ">
                                        <thead>
                                            <tr>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;"></th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Description </th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Make </th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Stock Location </th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Opening Stock</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Alternative Qty</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </section>

            <section class="content">
                <div class="container-fluid" id="generalEntrydiv" style="display:none">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <!-- /.card-header -->
                                <div class="card-body">

                                    <table id="geTable" class="table table-bordered table-hover display ">
                                        <thead>
                                            <tr>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;"></th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Creation Date</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Item Description</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Category </th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Unit </th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;"> Alt Unit </th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Stock Location </th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Qty</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Alternative Qty</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Short/Access</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Reason</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </section>



            @* GENRAL ENTRY*@

            <div class="modal fade" id="exampleModal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header" style="background-color:darkslategrey">
                            <h5 style="color:white">General Entry</h5>
                            <button style="color:white" type="button" class="close" data-dismiss="modal" aria-label="Close">
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <input type="text" style="width:40px;border:none;" hidden readonly id="itemid">
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span id="namecolor">Item Name  *</span><br />
                                        <select tabIndex="1" class="form-control" id="txtName" onchange="getsize()" style="width: 100%;">
                                        </select>

                                    </div>

                                </div>
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span>Item Size</span>
                                        <select tabIndex="2" class="form-control" id="txtSize" onchange="getclass()" style="width: 100%;">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span>Class/Thk</span>
                                        <select tabIndex="3" class="form-control" id="txtClass" style="width: 100%;">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span>Item Make</span>
                                        <select tabindex="4" class="form-control" id="txtMake" style="width: 100%; ">
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="input-group">
                                        <span id="unitcolor">Item Unit *</span>
                                        <select tabindex="5" class="form-control" id="txtUnit" style="width: 100%;">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <span id="unitcolor"> Alt Item Unit *</span>
                                        <select tabindex="5" class="form-control" id="alttxtUnit" style="width: 100%;">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span id="unitcolor">Wharehouse *</span>
                                        <select tabindex="5" class="form-control" id="txtWarehouse" style="width: 100%;">
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <span>Qty</span>
                                        <input tabindex="6" type="number" id="qty" class="form-control" placeholder="Qty" />
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <span>Alt Qty</span>
                                        <input tabindex="7" type="number" id="altqty" class="form-control" placeholder="AltQty" />
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <span style="color:black">Short/Access</span>
                                        <select class="form-control" id="shortAccess" style="width: 100%;">
                                            <option value="--Select--">--Select--</option>
                                            <option value="Short">Short</option>
                                            <option value="Access">Access</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <span>Description</span>
                                        <input tabindex="8" type="text" id="txtRemarks" class="form-control" onkeypress="saveed(event)" placeholder="Remarks" />
                                    </div>
                                </div>

                            </div>

                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" onclick="addGenralEntry()">Save</button>
                            <button type="button" class="btn btn-danger" onclick="resetItem()">Reset</button>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
    @section Scripts{
        <script src="~/js/Additems.js"></script>
        <script src="~/js/ItemList.js"></script>


        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

        <script src="../../plugins/datatables/jquery.dataTables.min.js"></script>
        <script src="../../plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
        <script src="../../plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
        <script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
        <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>

        <link href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.min.css " rel="stylesheet" type="text/css" />
        <link href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" rel="stylesheet" type="text/css" />


    }

    <script>
        document.title = "Item List";
    </script>


</body>

