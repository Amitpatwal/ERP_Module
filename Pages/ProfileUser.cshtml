@page
@model ItemMasterModel
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{

    ViewData["Title"] = "Home page";

}<!-- Content Wrapper. Contains page content -->
<head>
    <link rel="stylesheet" href="../plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="../plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">

</head>

<body>
    <input type="text" id="userid" hidden />

    <div class="container">
        <div class="main-body">

            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="main-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li>
                    <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                </ol>
            </nav>
            <!-- /Breadcrumb -->

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <div>
                                    <button style="border-radius:10px" id="y" data-toggle="modal" data-target="#attachments" onclick="EditImage()">
                                        <i class="fa fa-pencil" style="font-size:24px"></i>
                                    </button>
                                    <button style="border-radius:10px" id="x" onclick="deleteProfile()">
                                        <i class="fa fa-trash-o" style="font-size:24px; "></i>
                                    </button>
                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" id="userImage" class="rounded-circle" width="150">
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-primary">Edit</button>
                                    <button class="btn btn-outline-primary" onclick="updatePass()">Update Password</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6>Total Quotation</h6>
                                <span class="text-secondary" id="totalQuotation">0</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6> Total Performa Invoice</h6>
                                <span class="text-secondary" id="totalPI">0</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6> Total Sale Order </h6>
                                <span class="text-secondary" id="totalSO">0</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6> Total Purchase Order</h6>
                                <span class="text-secondary" id="totalPO">0</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6> Total Inwards Items</h6>
                                <span class="text-secondary" id="totalPR">0</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6> Total Despachted Order</h6>
                                <span class="text-secondary" id="totalDO">0</span>
                            </li>

                        </ul>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Full Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <span id="username2"></span>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <span id="emailid"> </span>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Phone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">

                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Mobile</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">

                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">

                                </div>
                            </div>


                            <hr>

                        </div>
                    </div>

                    <div class="row gutters-sm">
                        <div class="col-sm-12 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="d-flex align-items-center mb-3"></h6>

                                    <div class="row flex-column align-items-center justify-content-center" style="height: inherit;">
                                        <div class="header" style="margin-bottom: 5%;">
                                            <h4 style="text-align: center;">Inventory Permissions</h4>

                                        </div>
                                        <table class="table border">
                                            <thead>
                                                <tr>
                                                    <th scope="col" height="75"> </th>
                                                    <th scope="col" class="t-white" style="background-color: orangered">Read</th>
                                                    <th scope="col" class="t-white" style="background-color: dodgerblue">Write</th>
                                                    <th scope="col" class="t-white" style="background-color: teal">Update</th>
                                                    <th scope="col" class="t-white" style="background-color: orangered">Print</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <th scope="row" class="row-header">Item Master</th>
                                                    <td>N/A</td>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td><i class="fas fa-check"></i></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="row-header">Customer Ledger</th>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td>N/A</td>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td><i class="fas fa-check"></i></td>

                                                </tr>
                                                <tr>
                                                    <th scope="row" class="row-header">Sales Quotation</th>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td><i class="fas fa-times"></i></td>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td><i class="fas fa-check"></i></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="row-header">Performa Invoice</th>
                                                    <td><i class="fas fa-times"></i></td>
                                                    <td><i class="fas fa-times"></i></td>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td><i class="fas fa-check"></i></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="row-header">Purchase Order</th>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td><i class="fas fa-times"></i></td>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td><i class="fas fa-check"></i></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="row-header">Sale Order </th>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td><i class="fas fa-times"></i></td>
                                                    <td><i class="fas fa-times"></i></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="row-header">Inward Items</th>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td><i class="fas fa-times"></i></td>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td><i class="fas fa-check"></i></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="row-header">Dispacthed Order</th>
                                                    <td><i class="fas fa-times"></i></td>
                                                    <td><i class="fas fa-times"></i></td>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td><i class="fas fa-check"></i></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="row-header">Dispacthed Planning</th>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td><i class="fas fa-times"></i></td>
                                                    <td><i class="fas fa-check"></i></td>
                                                    <td><i class="fas fa-check"></i></td>
                                                </tr>


                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>



                </div>
            </div>

        </div>
    </div>



    <div class="modal fade" id="attachments" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="max-width: 35%;" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color:darkslategrey">
                    <span style="color:white">User Profile Image</span>
                    <button style="color:white" type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-content">

                                <div class="active tab-pane">
                                    <section class="content">
                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="card-body">
                                                        <div class="row">
                                                            <div class="col-md-10">
                                                                <div class="form-group">
                                                                    <span>File Location:</span> &nbsp;&nbsp;
                                                                    <form enctype="multipart/form-data">
                                                                        <input type="file" id="document_attachment_doc" accept="image/png, image/gif, image/jpeg" onchange=" previewimage()" class="form-control" placeholder="File" aria-label="File browser example">
                                                                    </form>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12" style="height:400px; width:100%; border-radius:10px; background-color:silver">
                                                                <div class="form-group">
                                                                    <button style="border-radius:10px" id="x" onclick="closemodel()">
                                                                        X
                                                                    </button>
                                                                    <img id="blah" src="#" alt="your image" style="display: none; height: 400px; border-radius: 10px; width: 100%" />
                                                                </div>

                                                            </div>

                                                            <div class="col-md-2">
                                                                <div class="form-group" style="border-color:black">
                                                                    <br />
                                                                    <button type="button" class="btn btn-success" onclick="SaveImage()">  Upload </button>
                                                                </div>
                                                            </div>



                                                            <hr style="border-top: 3px solid #bbb;">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    @section Scripts{
        <script src="~/js/Profile.js"></script>

        <!-- Select2 -->
        <script src="../plugins/select2/js/select2.full.min.js"></script>
        <link rel="stylesheet" href="../../plugins/select2/css/select2.min.css">
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <link href="~/css/Profile.css" rel="stylesheet" />


        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
        <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>


    }

    <style>

        #x {
            position: absolute;
            background: red;
            color: white;
            top: -10px;
            right: -10px;
        }

        #y {
            position: absolute;
            background: red;
            color: white;
            top: -10px;
            left: -10px;
        }
    </style>

</body>