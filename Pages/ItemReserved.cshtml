@page
@model ItemReservedModel
@{
    ViewData["Title"] = "Home page";
}

<body class="hold-transition sidebar-mini">
    <div class="container-fluid">
        <div>

            <nav class="navbar navbar-expand-sm  navbar-dark" style="background-color: #FBFBFD; ">
                <ul class="navbar-nav">

                    <li class="nav-item active">
                        <a class="nav-link" style="color:black" id="label"></a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto" style="display:none" id="itembutton">
                    <li class="nav-item">
                        <button onclick="loadData()" type="button" class="btn btn-success">Item Wise Reserved List</button>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto" style="display:none" id="customerButton">
                    <li class="nav-item">
                        <button onclick="customerWiseReservedList()" type="button" class="btn btn-success">Customer Wise Reserved List</button>
                    </li>
                </ul>
            </nav>


            <section class="content" id="itemwise" style="display:none">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <table id="reservedTable" class="table table-bordered table-hover" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">SR. No</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Description</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">SO No.</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Reservation Date</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Reserved By</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Reserved Qty</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Action</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </section>

            <section class="content" id="customerWise" style="display:none">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <table id="CustomerTable" class="table table-bordered table-hover" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">SR. No</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Customer Name</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">SO No.</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Reservation Date</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Reserved By</th>
                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Action</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </section>


            <div class="modal fade" data-keyboard="false" data-backdrop="static" id="customerItemWise" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" style="max-width: 60%;" role="document">
                    <div class="modal-content">
                        <div class="modal-header" style="background-color:darkslategrey">
                            <h5 style="color:white;color:white">View Item =></h5>&nbsp;&nbsp;&nbsp;
                            <h5 style="color:white;color:white" id="customerName"></h5>&nbsp;&nbsp;&nbsp;=>
                            <h5 style="color:white;color:white" id="Sono"></h5>&nbsp;&nbsp;&nbsp;

                            <button style="color:white" type="button" class="close" data-dismiss="modal" tabindex="-1" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="card">
                                                <div class="card-body">
                                                    <table id="CustomerItemTable" class="table table-bordered table-hover" style="width:100%">
                                                        <thead>
                                                            <tr>
                                                                <th style="font-family: 'sans-serif'; font-weight: normal;">SR. No</th>
                                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Description</th>
                                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Reservation Date</th>
                                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Reserved By</th>
                                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Reserved Qty</th>
                                                                <th style="font-family: 'sans-serif'; font-weight: normal;">Action</th>
                                                            </tr>
                                                        </thead>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>


                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="ReleasedSo('Cancel')">Cancel SO</button>
                            <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="ReleasedSo('Released')">Released SO</button>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>





